<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  
  <distributable/>
  
  <servlet>
    <servlet-name>firmaWebServlet</servlet-name>
    <servlet-class>es.caib.firmaweb.FirmaWebServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>requestPluginServlet</servlet-name>
    <servlet-class>es.caib.firmaweb.RequestPluginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>firmaWebServlet</servlet-name>
    <url-pattern>/firmaWebServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>requestPluginServlet</servlet-name>
    <url-pattern>/common/signwebmodule/requestPlugin/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
      <welcome-file>/index.html</welcome-file>
   </welcome-file-list> 
  
</web-app>