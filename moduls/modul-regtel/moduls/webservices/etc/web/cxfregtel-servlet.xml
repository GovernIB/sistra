<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jaxws="http://cxf.apache.org/jaxws"
      xmlns:soap="http://cxf.apache.org/bindings/soap"
      xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<bean id="Regtel_LoggingInInterceptor" class="es.caib.util.ws.server.LoggingInInterceptor"/>

    <bean id="Regtel_LoggingOutInterceptor" class="es.caib.util.ws.server.LoggingOutInterceptor"/>


	<bean id="Regtel_BasicSecurityInterceptor" class="es.caib.util.ws.server.BasicAuthAuthorizationInterceptor">
      <property name="securityDomain" value="java:/jaas/seycon" />
      <property name="unauthenticatedCalls" value="true" />
    </bean>

	<bean id="Regtel_UsernameTokenSecurityInterceptor" class="es.caib.util.ws.server.UsernameTokenAuthorizationInterceptor">
		<constructor-arg>
            <map>
               <entry key="action" value="UsernameToken"/>
               <entry key="passwordType" value="PasswordText"/>
               <entry key="passwordCallbackRef">
                  <ref bean="Regtel_PasswordCallback"/>
               </entry>
            </map>
         </constructor-arg>
	</bean>

	<bean id="Regtel_UsernameTokenSecurityInterceptorOut" class="es.caib.util.ws.server.UsernameTokenAuthorizationInterceptorOut">
		<constructor-arg>
            <map></map>
        </constructor-arg>
	</bean>

	<bean id="Regtel_PasswordCallback" class="es.caib.util.ws.server.ServerPasswordCallback">
		<property name="securityDomain" value="java:/jaas/seycon" />
    </bean>


	<jaxws:endpoint
        id="Regtel_BackofficeFacade_v1"
        implementor="es.caib.regtel.ws.v1.services.BackofficeFacadeImpl"
        wsdlLocation="WEB-INF/wsdl/regtel/v1/BackofficeFacade.wsdl"
        address="/v1/BackofficeFacade"
        bindingUri="Regtel_BackofficeFacade_v1">

        <!--
        <jaxws:features>
		    <bean class="org.apache.cxf.feature.LoggingFeature"/>
        </jaxws:features>
         -->

	   <jaxws:inInterceptors>
	     <!--  Interceptor logging -->
	 	 <ref bean="Regtel_LoggingInInterceptor"/>
	 	  <!--  Interceptor ws-security usernameToken -->
	 	 <ref bean="Regtel_UsernameTokenSecurityInterceptor"/>
   	 	  <!--  Interceptor security basic authentication -->
	      <ref bean="Regtel_BasicSecurityInterceptor"/>
		</jaxws:inInterceptors>

        <jaxws:outInterceptors>
         <!--  Interceptor logging -->
	 	 <ref bean="Regtel_LoggingOutInterceptor"/>
	 	  <!--  Interceptor ws-security timestamp -->
		 	 <ref bean="Regtel_UsernameTokenSecurityInterceptorOut"/>
		</jaxws:outInterceptors>

         <jaxws:outFaultInterceptors>
	 	  <!--  Interceptor ws-security timestamp -->
	 	 <ref bean="Regtel_UsernameTokenSecurityInterceptorOut"/>
	 	</jaxws:outFaultInterceptors>


    </jaxws:endpoint>

    <jaxws:endpoint
        id="Regtel_BackofficeFacade_v2"
        implementor="es.caib.regtel.ws.v2.services.BackofficeFacadeImpl"
        wsdlLocation="WEB-INF/wsdl/regtel/v2/BackofficeFacade.wsdl"
        address="/v2/BackofficeFacade"
        bindingUri="Regtel_BackofficeFacade_v2">

        <!--
        <jaxws:features>
		    <bean class="org.apache.cxf.feature.LoggingFeature"/>
        </jaxws:features>
          -->

	   <jaxws:inInterceptors>
	     <!--  Interceptor logging -->
	 	 <ref bean="Regtel_LoggingInInterceptor"/>
	 	  <!--  Interceptor ws-security usernameToken -->
	 	 <ref bean="Regtel_UsernameTokenSecurityInterceptor"/>
   	 	  <!--  Interceptor security basic authentication -->
	      <ref bean="Regtel_BasicSecurityInterceptor"/>
	 	</jaxws:inInterceptors>

       <jaxws:outInterceptors>
        <!--  Interceptor logging -->
	 	 <ref bean="Regtel_LoggingOutInterceptor"/>
	 	  <!--  Interceptor ws-security timestamp -->
		 	 <ref bean="Regtel_UsernameTokenSecurityInterceptorOut"/>
		</jaxws:outInterceptors>

		<jaxws:outFaultInterceptors>
	 	  <!--  Interceptor ws-security timestamp -->
	 	 <ref bean="Regtel_UsernameTokenSecurityInterceptorOut"/>
	 	</jaxws:outFaultInterceptors>

    </jaxws:endpoint>

</beans>
